@model marlabskiranam.Models.login

@{
    ViewBag.Title = "Signin Page";
    
}

<h3>SignIn Here</h3>

@using (Html.BeginForm("Signin", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            @Html.LabelFor(a => a.EmailID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(a => a.EmailID, new { htmlAttributes = new { @class = "form-control" },@placeholder="Enter Email Id" })
                @Html.ValidationMessageFor(a => a.EmailID, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(a => a.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(a => a.Password, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "Enter Password" })
                @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="SignIn" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Home", "Homepage")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


